<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <tr>
                    <th>ID</th>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>Data narodzin</th>
                </tr>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];
                    <tr @(@item.ID > 2 ? "class=warning" : "")>
                        <td>@item.ID</td>
                        <td>@item.Imie</td>
                        <td>@item.Nazwisko</td>
                        <td>@item.DataNarodzin @if (item.DataNarodzin >= DateTime.Parse("2000-01-01 00:00"))
                        { <span class="label label-warning">Młodziak</span> }
                        else if (item.DataNarodzin < DateTime.Parse("1950-01-01 00:00"))
                        { <span class="label label-primary">Doświadczony</span> }</td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="col-md-1"></div>
</div>

