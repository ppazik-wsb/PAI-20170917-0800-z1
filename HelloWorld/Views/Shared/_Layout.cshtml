<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PAI - HelloWorld", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("O aplikacji", "About", "Home")</li>
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">Test<span class="caret"></span></a>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            <li>@Html.ActionLink("Test", "Index", "Test")</li>
                            <li role="separator" class="divider"></li>
                            <li class="dropdown-header">Przypadki testowe</li>
                            <li>@Html.ActionLink("Test String", "TestString", "Test")</li>
                            <li>@Html.ActionLink("Test Raw Json", "TestRawJson", "Test")</li>
                            <li>@Html.ActionLink("Test Object Json", "TestObjJson", "Test")</li>
                            <li>@Html.ActionLink("Test Auth", "TestAuth", "Test")</li>
                            <li>@Html.ActionLink("Test Auth Ext", "TestAuthExt", "Test")</li>
                            <li>@Html.ActionLink("Test Redirect", "TestRedirect", "Test")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - <em>WSB Poznań</em><br />
            <small>data wygenrowania strony @DateTime.Now.ToLocalTime().ToLongDateString() @@ @DateTime.Now.ToLocalTime().ToLongTimeString()</small></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
